{
  "name": "responsive-snap-backend",
  "version": "1.0.0",
  "description": "This is a backend server for responsive-snap figma plugin",
  "exports": "./index.js",
  "author": "KevinShiuan",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "install:prod": "yarn install --freeze-lockfile",
    "server": "nodemon src/index.ts --exec 'ts-node --esm' --extensions '.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "deploy": "yarn pm2:start && yarn pm2:logs",
    "pm2:start": "pm2 start ./dist/index.js --name responsive-snap-backend --max-memory-restart 400M",
    "pm2:stop": "pm2 stop responsive-snap-backend",
    "pm2:list": "pm2 list",
    "pm2:logs": "pm2 logs responsive-snap-backend",
    "pm2:delete": "pm2 delete responsive-snap-backend"
  },
  "dependencies": {
    "buffer-image-size": "^0.6.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-queue": "^0.0.13",
    "playwright": "^1.33.0",
    "pm2": "^5.3.0",
    "split-images": "^1.0.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.16"
  }
}
